<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

  <!-- Managing both DB that use sequences and db that use auto increment -->
  <property name="autoIncrement" value="true" dbms="mysql,mssql,h2,sybase,db2,hsqldb"/>
  <property name="autoIncrement" value="false" dbms="oracle,postgresql"/>    

    <changeSet author="binhdv@exoplatform.com" id="1.0.1-1">
        <createTable tableName="SOC_RELATIONSHIPS">
            <column autoIncrement="true" name="RELATIONSHIP_ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="receiverId" type="VARCHAR(36)"/>
            <column name="senderId" type="VARCHAR(36)"/>
            <column name="status" type="INT"/>
        </createTable>
    </changeSet>
 
</databaseChangeLog>