<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

  <!-- Managing both DB that use sequences and db that use auto increment -->
  <property name="autoIncrement" value="true" dbms="mysql,mssql,h2,sybase,db2,hsqldb"/>
  <property name="autoIncrement" value="false" dbms="oracle,postgresql"/>    

	  <changeSet author="binhdv@exoplatform.com" id="1.0.1-1">
        <createTable tableName="SOC_PROFILES">
            <column autoIncrement="true" name="PROFILE_ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="firstName" type="VARCHAR(255)"/>
            <column name="fullName" type="VARCHAR(255)"/>
            <column name="IDENTITY_ID" type="VARCHAR(36)"/>
            <column name="jobsDescription" type="VARCHAR(255)"/>
            <column name="lastName" type="VARCHAR(255)"/>
            <column name="organizations" type="VARCHAR(255)"/>
            <column name="positions" type="VARCHAR(255)"/>
            <column name="skills" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="binhdv@exoplatform.com" id="1.0.1-2">
        <createTable tableName="SOC_RELATIONSHIPS">
            <column autoIncrement="true" name="RELATIONSHIP_ID" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="receiverId" type="VARCHAR(36)"/>
            <column name="senderId" type="VARCHAR(36)"/>
            <column name="status" type="INT"/>
            <column name="PROFILE_ID" type="BIGINT"/>
        </createTable>
    </changeSet>
    
    <changeSet author="binhdv@exoplatform.com" id="1.0.1-3">
        <addForeignKeyConstraint baseColumnNames="PROFILE_ID" baseTableName="SOC_RELATIONSHIPS" constraintName="FKEEB97C434CB8818" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="PROFILE_ID" referencedTableName="SOC_PROFILES"/>
    </changeSet>

</databaseChangeLog>