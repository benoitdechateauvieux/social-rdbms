<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.social.core.dao.ActivityDao</key>
    <type>org.exoplatform.social.core.dao.ActivityDao</type>
    <init-params>    
      <value-param>
        <name>persistenceUnitName</name>
        <description>The name of persistence unit</description>
        <value>org.exoplatform.social.hibernate-activity</value>      
      </value-param>
    </init-params>    
  </component>
  
  <component>
    <key>org.exoplatform.social.core.mysql.storage.ActivityHibernateStorageImpl</key>
    <type>org.exoplatform.social.core.mysql.storage.SynchronizedActivityMysqlStorage</type>
  </component>
  <component>
    <key>org.exoplatform.social.core.mysql.MysqlDBConnect</key>
    <type>org.exoplatform.social.core.mysql.storage.MysqlDBConnectImpl</type>
    <!-- type>org.exoplatform.social.core.mysql.storage.MysqlJNDIConnection</type -->
  </component>
  
  <external-component-plugins>
    <target-component>org.exoplatform.social.core.storage.api.ActivityStorage</target-component>
    <component-plugin>
      <name>ActivityHibernateStorageImpl</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.social.core.mysql.storage.ActivityHibernateStorageImpl</type>
    </component-plugin>
  </external-component-plugins>
</configuration>
